@model Final8Net.Models.RegisterViewModel
<link rel="stylesheet" href="~/css/Register.css">
@*<h2 class="text2">Welcome Back!</h2>*@
<form>
    <div class="c1">
        <h2 class="text">Register</h2>
        <div class="row">
            <div class="col-md-8">
                <div>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                            <div class="input">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Firstname", style = "border: none; width: 310; background-color: #eee;", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                            <div class="input">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Lastname", style = "border: none; width: 310; background-color: #eee;", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="input">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", style = "border: none; width: 310; background-color: #eee;", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="input">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", style = "border: none; width: 310; background-color: #eee;", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            <div class="input">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", style = "border: none;  width: 310; background-color: #eee;", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Register" class="reg" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>